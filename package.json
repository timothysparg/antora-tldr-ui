{
  "name": "antora-tldr-ui",
  "description": "Produces the UI bundle for a blog-style Antora site",
  "homepage": "https://github.com/timothysparg/antora-tldr-ui",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/timothysparg/antora-tldr-ui"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "vite --config preview-src/vite.config.js",
    "build": "npm run clean && npm run lint && vite build",
    "preview": "vite build --config preview-src/vite.config.js && vite preview --config preview-src/vite.config.js",
    "bundle": "npm run build",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'src/css/**/*.css'",
    "lint:js": "eslint 'src/helpers/*.js' 'src/js/**/+([^.])?(.bundle).js' 'scripts/*.js' 'plugins/*.js'",
    "format": "npx prettier-eslint --write 'src/helpers/*.js' 'src/js/**/+([^.])?(.bundle).js' 'scripts/*.js' 'plugins/*.js'",
    "clean": "rm -rf build public dist-preview",
    "release": "node scripts/release.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@asciidoctor/core": "~2.2",
    "@asciidoctor/tabs": "1.0.0-beta.6",
    "@fontsource/comfortaa": "~5.0",
    "@fontsource/roboto": "~5.0",
    "@fontsource/roboto-mono": "~5.0",
    "@octokit/rest": "^22.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "asciidoctor-kroki": "^0.18.1",
    "autoprefixer": "~10.4",
    "chokidar": "^4.0.3",
    "core-js": "~3.33",
    "cssnano": "~6.0",
    "docsearch.js": "~2.6",
    "eslint": "~6.8",
    "eslint-config-standard": "~14.1",
    "eslint-plugin-import": "~2.22",
    "eslint-plugin-node": "~11.1",
    "eslint-plugin-promise": "~4.2",
    "eslint-plugin-standard": "~4.0",
    "handlebars": "~4.7",
    "highlight.js": "9.18.3",
    "js-yaml": "~4.1",
    "postcss": "~8.4",
    "postcss-calc": "~9.0",
    "postcss-custom-properties": "~11.0",
    "postcss-import": "~15.1",
    "postcss-url": "~10.1",
    "prettier-eslint": "~12.0",
    "rollup-plugin-copy": "^3.5.0",
    "stylelint": "~13.13",
    "stylelint-config-standard": "~22.0",
    "vite": "^5.4.0",
    "vite-plugin-zip-pack": "^1.2.0"
  }
}
