{
	"name": "antora-tldr-ui",
	"version": "0.1.0",
	"description": "Produces the UI bundle for a blog-style Antora site",
	"homepage": "https://github.com/timothysparg/antora-tldr-ui",
	"license": "MPL-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/timothysparg/antora-tldr-ui"
	},
	"scripts": {
		"start": "npm run dev",
		"dev": "vite --config preview-src/vite.config.js",
		"preview": "vite build --config preview-src/vite.config.js && vite preview --port 5253 --strictPort --host --config preview-src/vite.config.js",
		"build": "npm run clean && npm run lint && vite build",
		"lint": "hk run check --all",
		"fix": "hk run fix --all",
		"clean": "rm -rf build preview-dist"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"browserslist": [
		"defaults"
	],
	"devDependencies": {
		"@asciidoctor/core": "3.0.4",
		"@asciidoctor/tabs": "1.0.0-beta.6",
		"@biomejs/biome": "2.2.4",
		"@fontsource/comfortaa": "5.0.17",
		"@fontsource/roboto": "5.0.8",
		"@fontsource/roboto-mono": "5.0.15",
		"@octokit/rest": "22.0.0",
		"@rollup/plugin-commonjs": "25.0.8",
		"@rollup/plugin-node-resolve": "15.3.1",
		"asciidoctor-kroki": "0.18.1",
		"autoprefixer": "10.4.21",
		"core-js": "3.45.1",
		"cssnano": "6.0.1",
		"docsearch.js": "2.6.3",
		"handlebars": "4.7.8",
		"highlight.js": "11.11.1",
		"js-yaml": "4.1.0",
		"postcss": "8.5.6",
		"postcss-calc": "9.0.1",
		"postcss-custom-properties": "11.0.0",
		"postcss-import": "15.1.0",
		"postcss-url": "10.1.3",
		"rollup-plugin-copy": "3.5.0",
		"sirv": "3.0.1",
		"stylelint": "16.24.0",
		"stylelint-config-standard": "39.0.0",
		"vite": "7.1.5",
		"vite-plugin-zip-pack": "1.2.4"
	}
}
