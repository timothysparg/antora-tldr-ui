{
  "name": "antora-tldr-ui",
  "description": "Produces the UI bundle for a blog-style Antora site",
  "homepage": "https://github.com/timothysparg/antora-tldr-ui",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/timothysparg/antora-tldr-ui"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "vite --config preview-src/vite.config.js",
    "build": "npm run clean && npm run lint && vite build",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'src/css/**/*.css'",
    "lint:js": "eslint 'src/helpers/*.js' 'src/js/**/+([^.])?(.bundle).js' 'scripts/*.js' 'plugins/*.js'",
    "format": "npx prettier-eslint --write 'src/helpers/*.js' 'src/js/**/+([^.])?(.bundle).js' 'scripts/*.js' 'plugins/*.js'",
    "clean": "rm -rf build preview-dist",
    "release": "node scripts/release.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@asciidoctor/core": "2.2.6",
    "@asciidoctor/tabs": "1.0.0-beta.6",
    "@fontsource/comfortaa": "5.0.17",
    "@fontsource/roboto": "5.0.8",
    "@fontsource/roboto-mono": "5.0.15",
    "@octokit/rest": "22.0.0",
    "@rollup/plugin-commonjs": "25.0.8",
    "@rollup/plugin-node-resolve": "15.3.1",
    "asciidoctor-kroki": "0.18.1",
    "autoprefixer": "10.4.21",
    "chokidar": "4.0.3",
    "core-js": "3.45.1",
    "cssnano": "6.0.1",
    "docsearch.js": "2.6.3",
    "eslint": "8.57.1",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.6.0",
    "handlebars": "4.7.8",
    "highlight.js": "9.18.3",
    "js-yaml": "4.1.0",
    "postcss": "8.5.6",
    "postcss-calc": "9.0.1",
    "postcss-custom-properties": "11.0.0",
    "postcss-import": "15.1.0",
    "postcss-url": "10.1.3",
    "prettier-eslint": "12.0.0",
    "rollup-plugin-copy": "3.5.0",
    "stylelint": "16.24.0",
    "stylelint-config-standard": "39.0.0",
    "vite": "7.1.5",
    "vite-plugin-zip-pack": "1.2.4"
  }
}
