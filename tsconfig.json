{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": false,
		"types": ["node"],
		"typeRoots": ["./types", "./node_modules/@types"],
		"skipLibCheck": true
	},
	"include": ["vite.config.ts", "types/**/*.d.ts"],
	"exclude": ["node_modules", "build", "public"]
}
