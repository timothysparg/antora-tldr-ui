{
	"mcpServers": {
		"context7": {
			"command": "op",
			"args": ["run", "--", "npx", "-y", "@upstash/context7-mcp"],
			"env": {
				"CONTEXT7_API_KEY": "op://Personal/context7.com/API-TOKEN"
			}
		},
		"brave-search": {
			"command": "op",
			"args": [
				"run",
				"--",
				"npx",
				"-y",
				"@modelcontextprotocol/server-brave-search"
			],
			"env": {
				"BRAVE_API_KEY": "op://Personal/Brave/api-token"
			}
		},
		"playwright": {
			"command": "npx",
			"args": ["-y", "@playwright/mcp@latest"],
			"env": {
				"PLAYWRIGHT_HEADLESS": "true",
				"PLAYWRIGHT_BROWSER": "chromium"
			}
		},
		"github": {
			"command": "op",
			"args": [
				"run",
				"--",
				"docker",
				"run",
				"-i",
				"--rm",
				"-e",
				"GITHUB_PERSONAL_ACCESS_TOKEN",
				"ghcr.io/github/github-mcp-server"
			],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "op://Personal/GitHub Personal Access Token/token"
			}
		}
	}
}
